    package="es.udc.psi14.prueba" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SensoresAndroid"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddSensorActiv"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_add_sensor" >
        </activity>
        <activity
            android:name=".DescriptionActiv"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_description" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
